{% extends 'base.html.twig' %}

{% block content %}
    <form action="" method="POST">
        <label for="name">Name of the tournament</label>
        <input type="text" id="name" name="name" placeholder="Name" required><br>
        <label for="description">Description for the tournament</label><br>
        <textarea id="description" name="description" placeholder="Description" required></textarea><br>
        <label for="numberOfTeam">Number of teams</label>
        <input type="number" id="numberOfTeam" name="numberOfTeam" placeholder="3-8" required><br>
        <input type="submit" value="create tournament">
    </form>
{% endblock %}